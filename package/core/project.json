{
  "name": "@jlogger/core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "package/core/src",
  "projectType": "library",
  "tags": [],
  "// targets": "to see all targets run: nx show project core --web",
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "main": "package/core/src/index.ts",
        "outputPath": "dist/package/core",
        "tsConfig": "package/core/tsconfig.json",
        "compiler": "swc",
        "format": ["cjs", "esm"],
        "assets": [{ "input": ".", "output": ".", "glob": "package/core/README.md" }]
      }
    }
  }
}
